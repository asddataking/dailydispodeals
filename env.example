# Supabase
# Replace with your actual Supabase project URL from https://app.supabase.com
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Public Supabase vars (for client-side edge function calls)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_MONTHLY_PRICE_ID=price_your_monthly_price_id
STRIPE_YEARLY_PRICE_ID=price_your_yearly_price_id

# Stripe TEST mode (for test checkouts) - when STRIPE_TEST_SK_KEY is set, these are used instead
# Create a webhook in Stripe Dashboard → Developers → Webhooks (while in Test mode) for your /api/stripe/webhook URL
STRIPE_TEST_SK_KEY=sk_test_xxxx
# Only if test webhook has a different signing secret than live; if same, leave unset and use STRIPE_WEBHOOK_SECRET only
# STRIPE_TEST_WEBHOOK_SECRET=whsec_your_test_webhook_signing_secret
STRIPE_TEST_MONTHLY_PRICE_ID=price_xxx
STRIPE_TEST_YEARLY_PRICE_ID=price_xxx

# Resend
RESEND_API_KEY=re_your_resend_api_key

# Cron Secrets (generate random strings)
CRON_SECRET=your_random_cron_secret_here
INGESTION_CRON_SECRET=your_random_ingestion_cron_secret_here

# App URL (your Vercel deployment URL)
APP_URL=https://yourdomain.com

# Optional for dev
DEV_SECRET=your_dev_secret_for_seed_route
NODE_ENV=development

# For ingestion pipeline - Gemini AI
# Option 1: Direct Gemini API (recommended for cost savings)
GEMINI_API_KEY=your_google_gemini_api_key
# Option 2: Vercel AI Gateway (alternative)
AI_GATEWAY_URL=https://gateway.vercel.ai/v1
AI_GATEWAY_API_KEY=your_vercel_ai_gateway_api_key
# Model provider preference (google or openai, defaults to google if GEMINI_API_KEY is set)
AI_MODEL_PROVIDER=google

# Google APIs
# Used for geocoding, Places, Maps, and YouTube Data API (v3)
# This single key is used for all Google API services
GOOGLE_API_KEY=your_google_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ID of the Dank N' Devour YouTube channel (e.g. UCxxxxxxxxxxxx)
# To find your channel ID, visit your YouTube channel and check the URL,
# or use the helper endpoint: /api/youtube/get-channel-id?username=@YourChannelName
YOUTUBE_CHANNEL_ID=your_youtube_channel_id

# Unsubscribe secret for generating secure unsubscribe tokens
UNSUBSCRIBE_SECRET=your_random_unsubscribe_secret_here

# Alternative: If using direct OpenAI (not recommended)
# OPENAI_API_KEY=sk-your_openai_api_key

# Rate Limiting (optional - for production)
# If using Upstash Redis for distributed rate limiting:
# UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-redis-token
# If not configured, falls back to in-memory rate limiting (resets on cold starts)

# Admin Dashboard
# Comma-separated list of admin email addresses (these users can access /admin)
ADMIN_EMAILS=admin@yourdomain.com,other@yourdomain.com

# Sentry (optional - defaults to hardcoded DSN if not set)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
